.swiper-container {
  height: 350rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.grid_container {
  display: flex;
  flex-wrap: wrap;
}

.grid_view_container {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #b2b2b2;
  box-sizing: border-box;
}

.grid_view_container image {
  width: 60rpx;
  height: 60rpx;
}

.grid_view_container text {
  font-size: 24rpx;
}

.bigbox {
  height: 2000rpx;
  background-color: azure;
}